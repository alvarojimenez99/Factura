@model Factura.Models.users
@{
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="row">
    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
    <div class="col-lg-6">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Bienvenido - FFE</h1>
                <h3 class="h5 text-gray-900 mb-4">Facturación Electrónica</h3>
            </div>
            @using (Html.BeginForm("Autherize", "Login", FormMethod.Post, new { @class="user" }))
            {

            <!--form class="user" action="Login/validar" method="post" name="forma"-->
        <div class="form-group">
            @Html.EditorFor(model=> model.email, new { htmlAttributes = new { @class = "form-control form-control-user",placeholder = "Direccion de correo.." } })
            <!--input type="email" required class="form-control form-control-user" id="email" name="email" aria-describedby="emailHelp" placeholder="Direccion de correo.."-->
        </div>
            <div class="form-group">
                @Html.EditorFor(model=> model.password, new { htmlAttributes = new { @class = "form-control form-control-user",placeholder = "Password" } })
                <!--input type="password" required class="form-control form-control-user" id="password" name="password" placeholder="Password"-->
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox small">
                    <input type="checkbox" class="custom-control-input" id="customCheck">
                    <label class="custom-control-label" for="customCheck">Recuerdame</label>
                </div>
            </div>
            <div class="form-group">
                <label class="small" style="color:red">@Html.DisplayFor(model=> model.LoginErrorMessage)</label>
            </div>
            <button class="btn btn-primary btn-user btn-block" value="Login" type="submit">Login</button>

            <hr>
            }
            <!--/form-->

            <div class="text-center">
                <a class="small" href="">Olvido Clave?</a>
            </div>

        </div>
    </div>
</div>