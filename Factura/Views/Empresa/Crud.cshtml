@model Factura.Models.empresas

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-2 text-gray-800">Empresas</h1>
    </div>

    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Datos de Empresa</h6>
        </div>
        @using (Html.BeginForm("Actualizar", "Empresa", FormMethod.Post, new { @class = "user" }))
        {
            <div class="form-group">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Nombre" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Direccion" } })

            </div>

            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    @Html.EditorFor(model => model.ruc, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "RUC" } })

                </div>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.website, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Web Site" } })

                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Email" } })

                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    @Html.EditorFor(model => model.contact, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Contacto" } })

                </div>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Telefono" } })

                </div>
            </div>
            <button class="btn btn-primary btn-user btn-block" value="Actualizar" type="submit">Actualizar Datos</button>

            <hr>
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.active)
        }
    </div>

</div>
<!-- Content Row -->
<!-- /.container-fluid -->
<!-- End of Main Content -->
<!-- Footer -->
