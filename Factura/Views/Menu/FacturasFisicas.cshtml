@model Factura.Models.facturas
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-2 text-gray-800">Facturas Fisicas</h1>
    </div>

    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Cola de Facturas Fisicas</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th style="text-align:right">Monto</th>
                            <th style="text-align:right">Impuesto</th>
                            <th>Empresa</th>
                            <th style="text-align:center">Estado</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th style="text-align:right">Monto</th>
                            <th style="text-align:right">Impuesto</th>
                            <th>Nro</th>
                            <th style="text-align:center">Estado</th>
                        </tr>
                    </tfoot>
                    <tbody>
                       
                        @if (ViewBag.Data != null)
                        {
                            foreach (var facturas in ViewBag.Data)
                            {
                                <tr>
                                    <td>@facturas.fecha</td>
                                    <td>@facturas.cliente</td>
                                    <td style="text-align:right">@facturas.monto</td>
                                    <td style="text-align:right">@facturas.impuesto</td>
                                    <td>@facturas.numero</td>

                                    <td style="text-align:center">
                                        <a href="#" class="btn btn-info btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-info-circle"></i>
                                            </span>
                                            <span class="text"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }





                        </tbody>

                    </table>
            </div>
        </div>
    </div>

</div>

<!-- Content Row -->
<!-- /.container-fluid -->
